{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Dav-Assist",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "scope": [
          {
            "name": "led",
            "cmd": "frmw_ectool",
            "args": true
          }
        ]
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$DOCUMENT/*" ]
      },
      "window": {
        "startDragging": true,
        "close": true,
        "minimize": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**"]
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.robosmrt.dav",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Dav-Assist",
        "width": 2000,
        "height": 1400,
        "transparent": true,
        "decorations": false,
        "x": 0,
        "y": 0
      }
    ]
  }
}
